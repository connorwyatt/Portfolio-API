{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": "src/",
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
